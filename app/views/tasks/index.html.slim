- if flash[:notice]
  .alert.alert-success
    = flash[:notice]
h1 Task一覧

= link_to '新規登録', new_task_path

= search_form_for(@query, url:tasks_path) do |f|
  = f.label :title_cont, 'タイトル'
  = f.search_field :title_cont
  = f.label :status, 'ステータス'
  = f.select :status_eq, options_for_select(Task.statuses)
  = f.submit

table
  thead
    tr
      th Title
      th Description
      th = sort_link(@query, :limit_day, "limit_day")
      th 進捗度
      th 登録日時
      th 更新日時


  tbody
    - @tasks.each do |task|
      tr
        td = task.title
        td = task.description
        td = task.limit_day.strftime("%Y/%m/%d %H:%M")
        td = task.status
        td = task.created_at.strftime("%Y/%m/%d %H:%M")
        td = task.updated_at.strftime("%Y/%m/%d %H:%M")
        td = link_to "詳細", task_path(task)
        td = link_to "編集", edit_task_path(task)
        td = link_to "削除", task, method: :delete, data: {confirm: "タスク#{task.title}を削除します。よろしいですか？"}
